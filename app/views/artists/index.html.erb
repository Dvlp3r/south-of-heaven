<script type="text/javascript" src="/js/instafeed-multi.js"></script>

<h1 class="title">Meet the Artists</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
    <div class="name">

    </div>
    <div class="space">
      <div class="row profile-pic">
        <div class="name">
          <%= link_to artist.name, artist_path(artist) %>
          <p class="instamodal" id="instafeed_modal"><a href="#instafeed-<%= artist.instagramtag %>" rel="modal:open">Portfolio</a></p>
        </div>
        <div class="bio">

          <ul style="list-style-type: none;display: inline;">
            <li><%= image_tag artist.pic %></li>
            <li style="display: inline;"><%= artist.bio %></li><br>
            <br>
            <% if current_user %>
              <li style="display: inline;"><%= artist.name %> - <%= link_to 'Edit', edit_artist_path(artist), class: "crud" %>&#160</li>
              <li style="display: inline;"><%= link_to 'Destroy', artist, class: "crud", method: :delete, data: { confirm: 'Are you sure?' } %>&#160</li>
              <li style="display: inline;"><%= link_to 'Show', artist, class: "crud" %>&#160</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div id="instafeed-<%= artist.instagramtag %>" class="instafeed" style="display:none;">
        <div class="instafeed-title">
          <p><a href="#" rel="modal:close"></a></p>
          <p class="responsive-tag">#<%= artist.instagramtag %></p>
        </div>
    </div>

        <!-- <% if current_user %>
          <td><%# artist.name %> - <%# link_to 'Edit', edit_artist_path(artist) %>&#160</td>
          <td><%# link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %>&#160</td>
          <td><%# link_to 'Show', artist %>&#160</td>
        <% end %> -->
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if user_signed_in? %>
  <%= link_to 'New Artist', new_artist_path, class: "crud left-pad" %>
  <% end %>
