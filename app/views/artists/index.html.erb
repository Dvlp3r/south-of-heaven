<h1>Listing Artists</h1>
<% if current_user %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
      <div class="portfolio-wrap masonry-wrap portfolio-layout-masonry row profile-pic">
          <p><%= image_tag artist.pic %></p>
      </div>
          <div class="bio">
            <blockquote><%= artist.bio %></blockquote>
          </div>
        
          <%= artist.name %>

          <% if current_user %>
            <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
            <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Artist', new_artist_path %>

  <% else %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @artists.each do |artist| %>
        <tr>
          <td><%= artist.name %><%= link_to 'Show', artist %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% end %>
